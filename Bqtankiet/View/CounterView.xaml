<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLKS_CK.Bqtankiet.View" 
        xmlns:ViewModel="clr-namespace:QLKS_CK.Bqtankiet.ViewModel"
        x:Class="QLKS_CK.Bqtankiet.View.AAAView" 
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Counter" Height="450" Width="800">
    <Window.DataContext>
        <ViewModel:CounterViewModel/>
    </Window.DataContext>
    <Grid>
        <TextBox x:Name="MyTextBox" HorizontalAlignment="Center" Margin="0,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextAlignment="Center" Height="45" FontSize="15" FontWeight="Bold" Text="{Binding CounterValue, Mode=OneWay}"/>
        <Button x:Name="MyButton" Content="Button" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,271,0,0" Command="{Binding ButtonClickCommand}"/>
    </Grid>
</Window>
